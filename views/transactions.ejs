
<form class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2">
            <h1>Transactions page</h1>
            <p>Your token:<span id="token"><%=token%></span></p>
            <h2>Create Stripe Payments</h2>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-md-2 col-lg-2 control-label" for="amount">Amount:</label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input type="number" name="amount" class="form-control" id="amount" placeholder="Enter amount" required autofocus>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-md-2 col-lg-2 control-label" for="currency">Currency: </label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input type="text" name="currency" class="form-control" id="currency" placeholder="Enter currency" required>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-md-2 col-lg-2 control-label" for="cardnumber">Card number </label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input type="text" name="customerid" class="form-control card-number" id="cardnumber" placeholder="Enter Card number" required>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-md-2 col-lg-2 control-label" for="cvc">CVC: </label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input type="number" name="cvc" class="form-control card-cvc" id="cvc" placeholder="Enter CVC" required>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-md-2 col-lg-2 control-label" for="card-expiry-month">Expired Month: </label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input type="number" name="card-expiry-month" id="card-expiry-month" class="card-expiry-month form-control" placeholder="Enter Expired Month" required>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-md-2 col-lg-2 control-label" for="card-expiry-year">Expired Year: </label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input type="number" name="card-expiry-year" id="card-expiry-year" class="card-expiry-year form-control" placeholder="Enter Expired Year" required>
        </div>
    </div>

    <div class="form-group">
        <div class="hide col-sm-offset-2 col-sm-10 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2 btn-danger">
            <p class="payment-errors"></p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2">
            <input type="button" class="btn btn-lg btn-info btn-block submittransaction" id="submittransaction" value="Submit"/>
        </div>
    </div>
</form>

